extends ../layout

block content
    .jumbotron
        .h1 #{title}
        .container.m-0
            .table
                form.row.m-3.form(action='/inst/sign-in', method='post')
                    .col-lg
                        .h3 Current Institutions:
                    .col-lg.text-center
                        .form-group.row
                            .col-sm-10
                                input#inputUID1.form-control(type='text', placeholder='Name', name='username')
                        .form-group.row
                            .col-sm-10
                                input#inputPassword1.form-control(type='password', placeholder='Password', name='password')
                    .col-lg
                        button.btn.btn-primary.btn-lg(type='submit') Login
                    .col-lg.text-center
                .row.m-9
                form.row.m-3.form(action='/inst/sign-up', method='post')
                    .col-lg
                        .h3 New Institutions:
                    .col-lg
                        .form-group.row
                            .col-sm-10
                                input#inputUID2.form-control(type='text', placeholder='Name', name = 'institutionName')
                        .form-group.row
                            .col-sm-10
                                input#inputPassword2.form-control(type='password', placeholder='Password', name = 'institutionPWD')
                        .form-group.row
                            .col-sm-10
                                input#inputPassword3.form-control(type='password', placeholder='Confirm Password', name = 'password2')
                    .col-lg.text-center
                        .form-group.row
                           .col-md
                               input#inputAddress.form-control(type='password', placeholder='Address', name = 'institutionStreetAddr')
                        .form-group.row
                           .col-sm-8
                               input#inputZip.form-control(type='password', placeholder='Zipcode', name = 'institutionZipCD')
                        .form-group.row
                           .col-sm
                               input#inputCity.form-control(type='password', placeholder='City', name = 'institutionCity')
                           .col-sm
                               input#inputState.form-control(type='password', placeholder='State', name = 'institutionStateCD')
                    .col-lg.text-center
                        button.btn.btn-primary.btn-lg(type='submit') Request To Join